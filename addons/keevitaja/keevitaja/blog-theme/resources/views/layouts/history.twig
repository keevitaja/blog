{% extends 'theme::app' %}

{% block body %}
    <main>
        <article class="last history">
            {% include 'theme::partials.breadcrumbs' %}

            <h1 class="title">{{ page.title }}</h1>

            {% for category in entries('posts', 'categories').get().load('posts') %}
                <h3>{{ category.name }}</h3>

                <div class="posts">
                    {% for post in category.posts %}
                        <div class="post">
                            <time>{{ post.publish_at.format(config_get('streams::datetime.date_format')) }}</time>
                            <a href="{{ post.route('view') }}">{{ post.title }}</a>
                        </div>
                    {% endfor %}
                </div>
            {% endfor %}

            {{ page.content|raw }}
        </article>

        <footer>
            {{ trans('theme::addon.footer')|raw }}
        </footer>
    </main>
{% endblock %}